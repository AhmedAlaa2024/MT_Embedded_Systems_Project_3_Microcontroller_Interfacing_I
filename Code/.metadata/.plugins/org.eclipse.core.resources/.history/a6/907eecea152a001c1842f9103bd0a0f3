#ifndef DC_MOTOR_H_
#define DC_MOTOR_H_

#include "std_types.h"

/*******************************************************************************
 *                               Types Declaration                             *
 *******************************************************************************/
typedef enum {
	CW, ACW, OFF
} Motor_State;

typedef struct {
	uint8 speed; /* The speed of the dc motor (Percentage) */
	Motor_State state; /* The state of the Motor */
} Dc_Motor_ConfigType;

#endif /* DC_MOTOR_H_ */
