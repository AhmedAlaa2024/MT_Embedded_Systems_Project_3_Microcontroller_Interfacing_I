#include "std_types.h"
#include "lcd.h"
#include "lm35_sensor.h"
#include "dc_motor.h"

int main(void)
{
	LCD_init();
	LM35_init();
	LCD_displayString("Temperature= ");
	uint8 data = 0;
	while(1)
	{
		data = LM35_getTemperature();
		LCD_moveCursor(0, 12);
		LCD_intgerToString(data);
		LCD_displayString("C");
	}
	return 0;
}
