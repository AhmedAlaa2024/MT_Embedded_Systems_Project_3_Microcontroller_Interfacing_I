#include "std_types.h"
#include "lcd.h"
#include "lm35_sensor.h"
#include "dc_motor.h"

int main(void)
{
	LCD_init();
	LM35_init();
	DcMotor_Init();

	LCD_moveCursor(1, 3);
	LCD_displayString("Temp = ");
	uint8 temp = 0, speed = 0;

	while(1)
	{
		temp = LM35_getTemperature();

		if (temp < 30)
			speed = 0;
		else if ((temp >= 30) && (temp < 60))
			speed = 25;
		else if ((temp >= 60) && (temp < 90))
			speed = 50;
		else if ((temp >= 90) && (temp < 120))
			speed = 75;
		else if (temp >= 120)
			speed = 100;

		if(speed == 0)
		{
			DcMotor_Rotate(OFF, speed);
			LCD_moveCursor(0, 3);
			LCD_displayString("FAN IS OFF");
		}
		else
		{
			DcMotor_Rotate(CW, speed);
			LCD_moveCursor(0, 3);
			LCD_displayString("FAN IS ON");
		}

		LCD_moveCursor(1, 10);
		LCD_intgerToString(temp);
		if (temp > 9)
			LCD_moveCursor(1, 12);
		else if (temp > 99)
			LCD_moveCursor(1, 11);
		else
			LCD_moveCursor(1, 10);
		LCD_displayString(" C");
	}
	return 0;
}
